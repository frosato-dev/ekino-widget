{
  "manifest_version": 2,
  "name": "MoodBoard",
  "version": "0.0.0.1",
  "description": "Ekino MoodBoard",
  "permissions": [
    "identity"
  ],
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Ekino MoodBoard",
    "default_popup": "popup.html"
  },
  "content_security_policy":"script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
  "oauth2": {
    "client_id": "1054973686813-uma5im5m619o2sb35uvuslqolnt67vkg.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}
