{
  "name": "MoodBoard",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "scripts": {
    "precommit": "lint-staged",
    "fmt": "prettier --no-semi --tab-width=4 --single-quote --bracket-spacing --print-width 100 --write '{event, popup}/src/**/*.{js,json,css}'",
    "fmt:test": "prettier --list-different --no-semi --tab-width=4 --single-quote --bracket-spacing --print-width 100 '{event, popup}/src/**/*.{js,json,css}'",
    "fmt:staged": "prettier --no-semi --tab-width=4 --single-quote --bracket-spacing --print-width 100 --write",
    "eslint:staged": "eslint --fix",
    "eslint:test": "eslint ./src"
  },
  "author": "FranÃ§ois Rosato",
  "dependencies": {
    "react": "^15.5.0",
    "react-chrome-redux": "0.0.7",
    "react-dom": "^15.5.0",
    "react-redux": "^4.0.0",
    "redux": "^3.0.4"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "gulp": "^3.9.0",
    "gulp-load-plugins": "^1.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-util": "^3.0.7",
    "rimraf": "^2.5.0",
    "webpack": "^2.6.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.2",
    "prettier": "^1.7.0"
  },
  "lint-staged": {
    "{event, popup}/src/**/*.json": [
      "fmt:staged",
      "git add"
    ],
    "{event, popup}/src/**/*.css": [
      "git add"
    ],
    "{event, popup}/src/**/*.js": [
      "fmt:staged",
      "eslint:staged",
      "test:staged",
      "git add"
    ]
  }
}
